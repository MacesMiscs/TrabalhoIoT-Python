//CÃ³digo para a parte do python no computador
import serial
import time
import datetime

while True:
    try:
        conexao=serial.Serial('COM3',9600)
        print('Conectado com exito')
        break
    
    except:
        pass
while True:
    conexao.readline()
    if conexao.readline()=="ativado":
            hora_local = time.localtime()
            hora_atual = time.strftime("%H: %M: %S", hora_local)
            dia = datetime.datetime.now()
            dia = dia.strftime("%x")
            alarme = open("Alarmes.txt", "a")
            relato=("Alarme ativado as ", hora_atual, " Dia: ", dia, "\n")
            alarme.writelines(relato)
