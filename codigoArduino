int triggerPin = 3;
int echoPin = 4;
int pir_Pin = 6;
int led_Pin = 12;
int buzzer_Pin = 13;
int vibrate_Pin = 5;

void setup(){
//Inicializa componentes
pinMode(pir_Pin, INPUT);
pinMode(led_Pin, OUTPUT);
pinMode(buzzer_Pin, OUTPUT);
pinMode(vibrate_Pin, OUTPUT);
Serial.begin(9600);
}


long readUltrasonicDistance(int triggerPin, int echoPin){ //Funçao do sensor de movimento 
pinMode(triggerPin, OUTPUT);
digitalWrite(triggerPin, LOW);
delayMicroseconds(2);
digitalWrite(triggerPin, HIGH);
delayMicroseconds(10);
digitalWrite(triggerPin, LOW);
return pulseIn(echoPin, HIGH);
}

void loop(){
 int distanceThreshold=200;
 int cm = 0.01723 * readUltrasonicDistance(3, 4);
  // Ações baseadas em leituras
  if (cm < distanceThreshold){
  Serial.println("Ultrassonico detectou algo");
  }
  if (digitalRead(pir_Pin)==HIGH){
  Serial.println("Pir detectou algo");
  }
  if (cm < distanceThreshold && digitalRead(pir_Pin)==HIGH){
    digitalWrite(led_Pin, HIGH);
    digitalWrite(buzzer_Pin, HIGH);
    digitalWrite(vibrate_Pin, HIGH);
    Serial.println("Detectado");
  }
  else{
    digitalWrite(led_Pin, LOW);
  }
